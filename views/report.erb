    </div>
  </div>
</div>
<div class="row"> 
  <div class="small-6 large-centered columns">
      <% if @time_entries %>
        <dl>
          <% @time_entries.each do | key, value | %>
            <dt> <%= key %> </dt> <dd data-time="<%= value %>"><%= Time.at(value).utc.strftime("%H:%M:%S") %></dd>
          <% end %>
        </dl>
      <% end %>
  </div>
</div>

